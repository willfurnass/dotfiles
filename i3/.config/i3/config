# Pulse Audio controls 
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl list sinks short | tac | awk '/RUNNING/ {print $2}' | tail -1) +5% && notify-send 'Increased volume'
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl list sinks short | tac | awk '/RUNNING/ {print $2}' | tail -1) -5% && notify-send 'Decreased volume'
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl list sinks short | tac | awk '/RUNNING/ {print $2}' | tail -1) toggle && notify-send 'Toggle mute'

# Media player controls
