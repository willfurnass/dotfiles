# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && notify-send 'Increased volume'
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && notify-send 'Decreased volume'
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && notify-send 'Toggle mute'

# Media player controls
bindsym XF86AudioPlay exec playerctl play && notify-send 'Play'
bindsym XF86AudioPause exec playerctl pause && notify-send 'Pause'
bindsym XF86AudioNext exec playerctl next && notify-send 'Next track'
bindsym XF86AudioPrev exec playerctl previous && notify-send 'Previous track'

# Startup apps
exec --no-startup-id dunst -config /home/will/.config/dunst/dunstrc
exec --no-startup-id numlockx on
exec --no-startup-id nm-applet
exec --no-startup-id "command -v dropbox-cli >/dev/null 2>&1 dropbox-cli start || dropbox start"
exec --no-startup-id /usr/lib/gnome-settings-daemon/gnome-settings-daemon --start --components=gpg,pkcs11,secrets,ssh
# Sync clipboard and primary selection
exec --no-startup-id autocutsel
exec --no-startup-id autocutsel -selection PRIMARY
exec --no-startup-id /usr/bin/udiskie --smart-tray &

# Binding mode to set resolution and change monitor positions (using xrandr)
mode "xrandrxps" {
        # HDMI monitor on left of laptop monitor
        bindsym h exec --no-startup-id xrandr --output HDMI1 --mode 1920x1080 --pos 0x0 --dpi 96 --output eDP1 --mode 1920x1080 --pos 1920x0 --dpi 96
        # HDMI monitor on right of laptop monitor
        bindsym l exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --dpi 96 --output HDMI1 --mode 1920x1080 --pos 1920x0 --dpi 96
        # HDMI monitor above laptop monitor
        bindsym k exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x1080 --dpi 96 --output HDMI1 --mode 1920x1080 --pos 0x0 --dpi 96
        # No HDMI monitor
        bindsym j exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --dpi 96 --output HDMI1 --off

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "xrandrthinkpad" {
        # HDMI monitor on left of laptop monitor
        bindsym h exec --no-startup-id xrandr --output HDMI1 --mode 1920x1080 --pos 0x0 --dpi 96 --output LVDS1 --mode 1366x768 --pos 1920x0 && test -f ~/.fehbg && ~/.fehbg
        # HDMI monitor above laptop monitor
        bindsym k exec --no-startup-id xrandr --output LVDS1 --mode 1366x768 --pos 0x1080 --output HDMI1 --mode 1920x1080 --pos 0x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg
        # No HDMI monitor
        bindsym j exec --no-startup-id xrandr --output LVDS1 --mode 1366x768 --pos 0x0 --output HDMI1 --off 
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+x mode "xrandrxps"
bindsym $mod+t mode "xrandrthinkpad"

# scrot & gimp - root
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# scrot & gimp - select window or rectangle
bindsym Mod1+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'

# Shutdown, reboot, lock screen binding mode
# (see https://wiki.archlinux.org/index.php/i3)
# Lock the screen
set $Locker i3lock -c 051205 && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"

# Set wallpaper
exec --no-startup-id test -f ~/.fehbg && ~/.fehbg
# Disable tap to click on trackpad
exec --no-startup-id synclient TapButton1=1

# Ensure KeePassXC is on specific workspace
assign [class="keepassxc"] 9
