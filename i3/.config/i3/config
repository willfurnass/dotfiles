# Use rofi (e.g. instead of dmenu) to launch applications
#
# Find and run a command-line program
bindsym $mod+Shift+a exec rofi -show run  -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699" -o 85
# Find and run a desktop program
bindsym $mod+Shift+d exec rofi -show drun -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699" -o 85
# Find a window (like alt-tab in other desktop environments)
bindsym Mod1+Tab exec rofi -show window   -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699" -o 85

