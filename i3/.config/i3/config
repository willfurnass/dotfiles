###########################################
# DISPLAY RESOLUTIONS AND MONITOR POSITIONS
###########################################
# Binding mode to set resolution and change monitor positions (using xrandr).
#
# Settings for Dell XPS 9550 with/without external (HDMI) monitor
# NB forcing HD resolution on the laptop's 4K display for simplicity
# NB monitor names can be found with 'xrandr --listmonitors'
mode "xrandrxps" {
    # 1680x1050 external monitor on left of laptop monitor
    bindsym h exec --no-startup-id xrandr --output HDMI1 --mode 1680x1050 --pos 0x0 --dpi 96 --output eDP1 --mode 1920x1080 --pos 1680x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # HD external monitor on right of laptop monitor
    bindsym l exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --dpi 96 --output HDMI1 --mode 1920x1080 --pos 1920x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # HD external monitor above laptop monitor
    bindsym k exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x1080 --dpi 96 --output HDMI1 --mode 1920x1080 --pos 0x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # No external monitor
    bindsym j exec --no-startup-id xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --dpi 96 --output HDMI1 --off && test -f ~/.fehbg && ~/.fehbg, mode "default"
}
# Settings for Lenovo Thinkpad E520 with/without external monitor
mode "xrandrthinkpad" {
    # 1680x1050 monitor on left of laptop monitor
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --mode 1680x1050 --pos 0x0 --dpi 96 --output LVDS-1 --mode 1366x768 --pos 1680x0 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # HD monitor on right of laptop monitor
    bindsym l exec --no-startup-id xrandr --output LVDS-1 --mode 1366x768 --pos 0x0 --output HDMI-1 --mode 1920x1080 --pos 1366x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # 1680x1050 monitor HD monitor above laptop monitor
    bindsym k exec --no-startup-id xrandr --output LVDS-1 --mode 1366x768 --pos 0x1080 --output HDMI-1 --mode 1680x1050 --pos 0x0 --dpi 96 && test -f ~/.fehbg && ~/.fehbg, mode "default"
    # No external monitor
    bindsym j exec --no-startup-id xrandr --output LVDS-1 --mode 1366x768 --pos 0x0 --output HDMI-1 --off && test -f ~/.fehbg && ~/.fehbg, mode "default"
}
bindsym $mod+x mode "xrandrxps"
bindsym $mod+t mode "xrandrthinkpad"

#############
# SCREENSHOTS
#############
# Take a screenshot of the root window with scrot then open it in gimp for editing
bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
# Take a screenshot of a user-selected window/rectangle with scrot then open it in gimp for editing
bindsym Mod1+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'

##############################################################
# SHUTDOWN/REBOOT/SUSPEND/HIBERNATE, LOGOUT AND SCREEN LOCKING
##############################################################
# Define a binding mode to handle all the above
# (see https://wiki.archlinux.org/index.php/i3)

# Convenient alias for screen locking
set $Locker i3lock -c 051205 -t && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

