# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 1
  colors = true
  color_good = "#36E592"
  color_degraded = "#CE9726"
  color_bad = "#CE4B4F"
  color_separator = "#B3BEFF"
  interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "path_exists VPN"
order += "sysdata"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "battery all"
order += "tztime local"
order += "volume master"

path_exists VPN {
     path = "/proc/sys/net/ipv4/conf/tun0"
}

wireless _first_ {
        format_up = " wless   %quality  %essid  %bitrate  %ip"
        format_down = " wired"
}

ethernet _first_ {
        format_up = " wired   %quality  %essid  %bitrate  %ip"
        format_down = " wired"
}

load {
        format = "%1min"
}

cpu_usage {
        format = " %usage"
}

disk "/" {
        format = "√ %avail"
}

disk "/home" {
        format = " %avail"
}

battery all {
        format = " %status %percentage"
}

tztime local {
        format = " %Y-%m-%d %H:%M"
}

volume master {
  format = " %volume"
  format_muted = " %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
