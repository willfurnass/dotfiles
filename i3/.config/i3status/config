# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "taskwarrior"
order += "wireless _first_"
order += "ethernet _first_"
order += "sysdata"
order += "load"
order += "disk /"
order += "disk /home"
order += "battery all"
order += "xrandr"
#order += "pomodoro"
order += "tztime local"

#taskwarrior {
#        format = "TW: {task}"
#}

wireless _first_ {
        format_up   = " %quality %essid %ip"
        format_down = " -"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up   = " %ip (%speed)"
        format_down = " -"
}

battery all {
#format = "P: %status %percentage %remaining"
        format = " %status %percentage"
}

tztime local {
        format = " %Y-%m-%d %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "√⛀ %avail"
}

disk "/home" {
        format = "⛀ %avail"
}
