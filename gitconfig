[user]
    name = Will Furnass
    email = will@thearete.co.uk

[push]
    default = matching

[color]
    status = auto
    branch = auto
    ui = true

[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    tree = log --graph --pretty=oneline --abbrev-commit  
    unstage = reset HEAD --
    last = log -1 HEAD
    co = checkout
    ci = commit

[diff "zip"]
    textconv = unzip -c -a

[core]
    editor = vim
    excludesfile = /home/will/.gitignore_global
    autocrlf = input
