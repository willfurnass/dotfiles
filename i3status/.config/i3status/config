# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "taskwarrior"
order += "wireless _first_"
order += "sysdata"
order += "load"
#order += "disk /"
#order += "disk /home"
order += "battery all"
#order += "xrandr"
#order += "pomodoro"
order += "tztime local"

taskwarrior {
        format = "TW: {task}"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "P: %status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "L: %1min"
}

disk "/" {
        format = "R: %avail"
}

disk "/home" {
        format = "H: %avail"
}
